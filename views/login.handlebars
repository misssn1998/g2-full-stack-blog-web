<div id="login_container">
    <div>
        {{#if toastMessage}}
        <p id="login_toast">{{toastMessage}}</p>
        {{/if}}

        <div id="login_body_container">
            <h1>Login</h1>
            <form action="./login" method="POST">
                <div class="flex-col mb" id="login_username">
                    <label for="txtUsername">Username:</label>
                    <input type="text" name="username" id="txtUsername" required>
                </div>

                <div class="flex-col mb" id="login_password">
                    <label for="txtPassword">Password:</label>
                    <input type="password" name="password" id="txtPassword" required>
                </div>

                <div class="flex-row justify-sb align-center" id="login_button">
                    <button type="submit">Log in</button>
                </div>
            </form>

            <div>
                <p>Don't have an account? <a href='/register'>Register</a></p>
            </div>
        </div>
    </div>
</div>